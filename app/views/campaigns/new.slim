.agency-dashboard
  h1 Campaign Setup
  .dropdown-menu-button
    = react_component("LinkDropdownMenu",
            props: {icon: "fas fa-cog gear-icon", items: [{id: "edit", text: "Edit Profile", icon: "fas fa-pen", link: "/users/#{current_user.id}/edit"}]},
            prerender: false)
  .row
    .col-12
      .card.card-v2
        .card-body
          = react_component("CampaignForm",
                  props: {campaign: @campaign,
                          save_campaign_url: "/vendors/#{@advertiser.id}/campaigns",
                          save_campaign_method: "POST",
                          token: form_authenticity_token,
                          options: options,
                          data_providers: data_providers_nested,
                          data_providers_key_value: data_providers_key_value},
                  prerender: false)