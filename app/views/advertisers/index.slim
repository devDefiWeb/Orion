.agency-dashboard
  h1 #{@agency.name}
  .dropdown-menu-button
    = react_component("LinkDropdownMenu",
                      props: {\
                        icon: "fas fa-cog gear-icon",
                        items: [{\
                          id: "edit",
                          text: "Edit Profile",
                          icon:"fas fa-pen",
                          link:"/users/#{current_user.id}/edit"}]},
                      prerender: false)

= react_component("AgencyDashboardComponent",
                  props: {\
                    agency: @agency,
                    advertisers: @advertisers.as_json(include: :campaigns),
                    token: form_authenticity_token,
                    annual_revenue_options: annual_revenue_options},
                  prerender: false)
